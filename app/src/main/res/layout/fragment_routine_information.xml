<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginPageBackgroundColor"
    tools:context=".ui.Routine.EditRoutineFragment"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.Routine.RoutineInformationFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textSize="20sp"
                android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/txtNameRoutineInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:textSize="20sp"
                android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/txtPriceRoutineInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion:"
                android:textSize="20sp"
                android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/txtDescriptionRoutineInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificacion:"
                android:textSize="20sp"
                android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/txtRaitingRoutineInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero de Calificaciones:"
                android:textSize="20sp"
                android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/txtNumRaitingRoutineInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:textSize="20sp"
                android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/txtTypeRoutineRoutineInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btnGoToEditRoutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar"/>
        <Button
            android:id="@+id/btnGoTolistRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Solicitudes"/>
        <Button
            android:id="@+id/btnGoToResources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrar Recursos"/>
    </LinearLayout>
</ScrollView>
